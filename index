<audio id="song" src="palagi.mp3"></audio>

<script>
const lyrics = [
  { time: 0.000,   text: "Eto tayo" },
  { time: 4.200,   text: "Ngunit sa huli, palagi" },
  { time: 11.500,   text: "Babalik pa rin sa yakap mo" },
  { time: 16.000,  text: "Hanggang sa huli, palagi" },
  { time: 23.500,  text: "Pipiliin kong maging sa â€™yo" },
  { time: 27.000,  text: "Ulit-ulitin man" },
  { time: 30.500,  text: "Nais kong malaman mong" },
  { time: 34.500,  text: "Iyo ako palagi" },
  { time: 44.500,  text: "Palagi" }
];

const lyricsDiv = document.getElementById('lyrics');
const audio = document.getElementById('song');
const playButton = document.getElementById('playButton');

function playSong() {
    // ðŸ”¹ Hide the button after clicking
    playButton.style.display = 'none';

    audio.play();
    let currentLine = 0;

    function highlightLine() {
        if (currentLine >= lyrics.length) return;

        const line = lyrics[currentLine];
        const nextLineTime = lyrics[currentLine + 1]?.time || audio.duration;
        const duration = (nextLineTime - line.time) * 1000;
        const letters = line.text.split('');
        let index = 0;

        lyricsDiv.innerHTML = '';
        const interval = setInterval(() => {
            if (index >= letters.length) {
                clearInterval(interval);
            } else {
                lyricsDiv.innerHTML = letters
                    .map((char, i) => i <= index ? `<span class="highlight">${char}</span>` : char)
                    .join('');
                index++;
            }
        }, duration / letters.length);

        currentLine++;
        setTimeout(highlightLine, duration);
    }

    highlightLine();
}
</script>

